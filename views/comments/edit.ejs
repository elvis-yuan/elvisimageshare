<% include ../partials/header %>


    <div class="row">
        <h1 class="text-center"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span>Edit Comment</h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/imageshare/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>" required>
                </div>
                <div class="form-group">
                <button class="btn btn-sm btn-default btn-block btn-primary">Submit!</button>
                </div>
            </form>
            <a href="/imageshare">Go Back</a>
        </div>
        
    </div>


