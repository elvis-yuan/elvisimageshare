<% include ../partials/header %>

<div class= "container">
    <div class="row">
        <div class="container" id="form">
        <h1 class="text-center text-white">Add New Comment to <%= campground.name %></h1>
            <div style="width: 30%; margin: 30px auto;">
            <form action="/imageshare/<%= campground._id %>/comments" method="POST">
                <div class="form-group">
                    <textarea class="form-control" rows="5" type="text" name="comment[text]" placeholder="Text" required></textarea>
                </div>
                <div class="form-group">
                <button class="btn btn-sm btn-default btn-block btn-primary">Submit!</button>
                </div>
                
            </form>
            <a href="/imageshare">Go Back</a>
            </div>
        </div>
    </div>
</div>


<% include ../partials/footer %>