<% include ../partials/header %>

   <div class="row">
      <div class="container" id="form">
         <h1 class="text-center text-white">Create a New Post</h1>


         <div class="forms">
            <form action="/imageshare" enctype="multipart/form-data" method="post">
               <div class="form-group file-upload">
                  <label class="file-upload__label" for="image"><span aria-expanded="false" class="glyphicon glyphicon-upload"></span> Upload an Image</label> <input accept="image/*" class="file-upload__input" id="image" name="image" required="" type="file">
               </div>


               <div class="form-group">
                  <input class="form-control" name="campground[name]" placeholder="name" type="text">
               </div>


               <div class="form-group">
                  <input class="form-control" name="campground[description]" placeholder="description" type="text">
               </div>


               <div class="form-group">
                  <button class="btn btn-sm btn-default btn-block btn-primary">Submit!</button>
               </div>
            </form>
            <a href="/imageshare">Go Back</a>
         </div>
      </div>
   </div>
	
<%include ../partials/footer %>
